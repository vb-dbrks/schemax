{
  "name": "schemax-vscode",
  "displayName": "SchemaX",
  "description": "Visual designer for Databricks Unity Catalog schemas with version control",
  "publisher": "varunbhandary",
  "version": "0.1.0",
  "author": {
    "name": "Field Engineering"
  },
  "contributors": [
    {
      "name": "Varun Bhandary",
      "url": "https://github.com/vb-dbrks"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vb-dbrks/schemax-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/vb-dbrks/schemax-vscode/issues"
  },
  "homepage": "https://github.com/vb-dbrks/schemax-vscode#readme",
  "keywords": [
    "databricks",
    "unity catalog",
    "schema",
    "database",
    "migration",
    "version control",
    "visual designer"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "schemax.openDesigner",
        "title": "SchemaX: Open Designer"
      },
      {
        "command": "schemax.showLastOps",
        "title": "SchemaX: Show Last Emitted Changes"
      },
      {
        "command": "schemax.createSnapshot",
        "title": "SchemaX: Create Snapshot"
      },
      {
        "command": "schemax.generateSQL",
        "title": "SchemaX: Generate SQL Migration"
      }
    ]
  },
  "scripts": {
    "build": "npm run build:webview && npm run build:ext",
    "build:webview": "vite build",
    "build:ext": "node esbuild.config.mjs",
    "watch": "concurrently \"npm:watch:webview\" \"npm:watch:ext\"",
    "watch:webview": "vite build --watch",
    "watch:ext": "node esbuild.config.mjs --watch",
    "package": "vsce package --no-dependencies",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.90.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.23.0",
    "typescript": "^5.4.0",
    "vite": "^7.0.0",
    "@vscode/vsce": "^3.6.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.0",
    "zustand": "^4.5.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.52.0",
    "@rollup/rollup-linux-x64-gnu": "^4.52.0"
  }
}

